{{>layout/header}}
<div class="position-relative me-5 ms-5 pe-5 ps-5">
    <div class="text-center mt-5 mb-5">
        <h1>User Detail</h1>
    </div>
    <div class="me-5 ms-5 pe-5 ps-5">
        <div class="col-12">
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">아이디</span>
                <input type="text" class="form-control" placeholder="ID" aria-label="Username"
                       aria-describedby="basic-addon1" value="{{user.userId}}" style="background-color: white;"
                       readonly>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
            <span class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">닉네임</span>
                <input type="text" class="form-control" placeholder="Nickname" aria-label="Username"
                       aria-describedby="basic-addon1" value="{{user.userNick}}"
                       style="background-color: white;" readonly>
            </span>
            </div>
            <div class="col-md-6">
            <span class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">가입일</span>
                <input type="text" class="form-control" placeholder="Created Date" aria-label="Username"
                       aria-describedby="basic-addon1" value="{{user.createdDate}}"
                       style="background-color: white;" readonly>
            </span>
            </div>
        </div>
        <div class="col-12">
            <div class="input-group">
                <span class="input-group-text">자기소개</span>
                <textarea class="form-control" aria-label="With textarea"
                          style="resize: none; height: 400px; background-color: white"
                          readonly>{{user.userIntro}}</textarea>
            </div>
        </div>
    </div>
    <div class="text-end mt-5">
        <a class="btn btn-primary" href="/" role="button">메인으로</a>
        <a class="btn btn-primary" href="/post/1" role="button">작성글 확인</a>
        <button class="btn btn-warning text-white" role="button" data-bs-toggle="modal" data-bs-target="#exampleModal" id="update-path">정보 수정</button>
        <button class="btn btn-danger" role="button" data-bs-toggle="modal" data-bs-target="#exampleModal" id="delete-path">회원 탈퇴</button>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">비밀번호 확인</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="password" placeholder="비밀번호를 입력하세요." id="checkPw">
                    <input type="hidden" id="id" value="{{user.id}}">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">닫기</button>
                <button type="button" class="btn btn-primary" id="btn-checkPw" value="">확인</button>
            </div>
        </div>
    </div>
</div>
{{>layout/userFooter}}